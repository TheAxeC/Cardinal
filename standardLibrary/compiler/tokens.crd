import "grammer" from TokenType

// Token in a script
class Token {
	// type of the token
	field _type

	// string representing the token
	field _str

	// line number of the token
	field _line
	
	construct new(type, str, line) {
		_type = type
		_str = str
		_line = line	
	}
	
	type { _type }
	str { _str }
	line { line }

}


